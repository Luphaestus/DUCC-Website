{
  "name": "ducc-website",
  "version": "1.0.0",
  "description": "DUCC Website (uni assignment)",
  "homepage": "https://github.com/Luphaestus/DUCC-Website#readme",
  "bugs": {
    "url": "https://github.com/Luphaestus/DUCC-Website/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Luphaestus/DUCC-Website.git"
  },
  "license": "Apache-2.0",
  "author": "Luphaestus",
  "type": "commonjs",
  "scripts": {
    "db:init": "cross-env-shell \"node server/db/init/init.js $NODE_ENV\"",
    "start": "cross-env NODE_ENV=prod npm run db:init && cross-env NODE_ENV=prod node server/server.js",
    "sass": "sass --watch src:public --load-path=node_modules/@picocss/pico/scss/",
    "sass:build": "sass src:public --load-path=node_modules/@picocss/pico/scss/ --no-source-map",
    "dev:server": "cross-env NODE_ENV=dev nodemon server/server.js",
    "dev": "cross-env NODE_ENV=dev npm run db:init && cross-env NODE_ENV=dev run-p sass dev:server",
    "test": "jest"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "src/*"
    ]
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "bcrypt": "^6.0.0",
    "connect-sqlite3": "^0.9.16",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jest": "^30.2.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "sass": "^1.94.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "cross-env": "^10.1.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.1.4"
  }
}
