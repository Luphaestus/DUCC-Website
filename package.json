{
  "name": "ducc-website",
  "version": "1.0.0",
  "description": "DUCC Website (uni assignment)",
  "homepage": "https://github.com/Luphaestus/DUCC-Website#readme",
  "bugs": {
    "url": "https://github.com/Luphaestus/DUCC-Website/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Luphaestus/DUCC-Website.git"
  },
  "license": "Apache-2.0",
  "author": "Luphaestus",
  "type": "module",
  "scripts": {
    "db:init": "cross-env-shell \"node server/db/init/init.js $NODE_ENV\"",
    "start": "cross-env NODE_ENV=prod npm run --silent db:init && cross-env NODE_ENV=prod node server/server.js",
    "sass": "sass --watch src:public --load-path=node_modules/@picocss/pico/scss/",
    "sass:build": "sass src:public --load-path=node_modules/@picocss/pico/scss/ --no-source-map",
    "dev:server": "cross-env NODE_ENV=dev nodemon --quiet server/server.js",
    "dev": "cross-env NODE_ENV=dev npm run --silent db:init && cross-env NODE_ENV=dev run-p --silent sass dev:server",
    "pretest": "cross-env NODE_ENV=test DATABASE_PATH=data/database.test.db npm run --silent db:init",
    "test": "cross-env NODE_ENV=test DATABASE_PATH=data/database.test.db vitest run",
    "test:watch": "cross-env NODE_ENV=test DATABASE_PATH=data/database.test.db vitest",
    "apidoc": "npx openapi-generate-html -i public/openapi.json --theme=dark --ui stoplight --theme dark -o public/openapi.html",
    "prepare": "husky install"
  },
  "lint-staged": {
    "public/openapi.json": [
      "npm run apidoc",
      "git add public/openapi.html"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ext": "js,json"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "ansi-colors": "^4.1.3",
    "bcrypt": "^6.0.0",
    "cli-progress": "^3.12.0",
    "connect-sqlite3": "^0.9.16",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "file-type": "^21.3.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "sass": "^1.94.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "connect-livereload": "^0.6.1",
    "cross-env": "^10.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "livereload": "^0.10.3",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.1.4",
    "vitest": "^4.0.17"
  }
}
