{
    # Global options
    debug
    # Use the IP address as the default SNI when the client doesn't provide one (e.g., accessing via IP)
    default_sni 165.227.225.33
}

{$DOMAIN_NAME:localhost} {
    # Use internal (self-signed) certificates to avoid CA issues with IP addresses
    tls internal

    # Reverse proxy to the app service on port 3000
    reverse_proxy app:3000
    
    # Enable compression
    encode gzip
    
    # Basic security headers
    header {
        # enable HSTS
        Strict-Transport-Security max-age=31536000;
        # disable clients from sniffing the media type
        X-Content-Type-Options nosniff
        # clickjacking protection
        X-Frame-Options DENY
        # keep referrer data secure
        Referrer-Policy no-referrer-when-downgrade
    }
}
